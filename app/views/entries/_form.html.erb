<%= simple_form_for(@entry) do |f| %>
<%= f.error_notification %>
<div class="row">
  <div class="span7">
    <%= f.input :title, wrapper: :prepend, label: false do %>
      <%= content_tag :span, "Title", class: "add-on" %>
      <%= f.input_field :title, class: "span6" %>
    <% end %>
  </div>
  <div class="span4 offset1">
    <%= f.input :published,
        as: :boolean,
        label: "Share on SpoutWall" %>
  </div>
</div>
<div class="row">
  <div class="span7">
    <%= f.input :content,
        as: :text,
        label: false,
        placeholder: "Give more details about what you're dealing with",
        input_html: { rows: 7, class: "span7" } %>
  </div>
</div>

<div class="row">
  <div class="span7">
    <div class="well">
      <div class="row">
        <div class="span2">
          <%= f.input :happiness_level,
              collection: 1..5,
              label: "Happiness Level",
              input_html: { class: "span1" } %>
        </div>
        <div class="span2">
          <%= f.input :anxiety_level,
              collection: 1..5,
              label: "Anxiety Level",
              input_html: { class: "span1" } %>
        </div>
        <div class="span2">
          <%= f.input :irritation_level,
              collection: 1..5,
              label: "Irritation Level",
              input_html: { class: "span1" } %>
        </div>
      </div>
      <div class="row">
        <div class="span7">
          <%= f.input :category,
              collection: %w(Family Other),
              label: "Categorize your entry to understand what bothers or delights you regularly" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-actions">
  <%= f.button :submit, "Log it!",
      class: "btn-large btn-block  btn-primary" %>
</div>

<% end %>
