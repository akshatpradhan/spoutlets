<div class="row">
  <div class="span3">
    <%= link_to "Spoutlets", root_path, :class => 'brand' %>
    <span class="muted"><small>the tools you need for mental wellness</small></span>
  </div>
  <!-- Right Nav -->
  <div class="span7">
    <ul class="nav pull-right">
    <% if user_signed_in? %>
      <li>
        <%= link_to raw('<i class="icon-group"></i> community'),
            entries_path %>
      </li>
      <li class="divider-vertical"></li>
      <li>
        <%= link_to raw('<i class="icon-book"></i> journal'),
            current_user %>
      </li>
      <li class="divider-vertical"></li>
      <li>
        <%= link_to raw('<i class="icon-share"></i> share with therapist'),
            new_therapist_invitation_path %>
      </li>
      <li class="divider-vertical"></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle"
        data-toggle="dropdown"><i class="icon-cog"></i> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">settings</a></li>
          <li class="divider"></li>
          <li><%= link_to 'logout', signout_path %></li>
        </ul>
      </li>
    <% else %>
      <li>
      <%= link_to 'register or login', signin_path %>
      </li>
    <% end %>
      <li class="divider-vertical"></li>
    </ul>
  </div> <!-- end of Right Nav -->
  <div class="span2">
    <%= link_to raw('<i class="icon-plus"></i> log an entry'), new_entry_path, :class => "btn btn-primary", :method => :get  %>
  </div>
</div>
