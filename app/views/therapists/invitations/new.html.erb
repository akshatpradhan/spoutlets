<%= simple_form_for resource,
    as: resource_name,
    url: invitation_path(resource_name),
    html: {method: :post, class: 'form-vertical'} do |f| %>
<%= f.error_notification %>
<div class="row">
  <div class="span5 offset4">
    <%= image_tag "invitation_callout.png" %>
  </div>
</div>
<br />
<div class="row">
  <div class="span3 offset5">
    <%= f.input :email,
        label: "Your therapist's email" %>
    <%= f.button :submit, "Enable Access!",
        class: "btn-large btn-success pull-right" %>
  </div>
</div>
<% end %>
